<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>Video Game Rater</title>
  </head>
  <body>
    <h1>List and Rate Video Games</h1>

    <h2>Game Ratings</h2>
    <ul class="gameRates">
      <% for(var i=0; i<vidyagames.length; i++) {%>
      <li class="gameRate">
        <span><%= vidyagames[i].title %></span>
        <span><%= vidyagames[i].voteUp %></span>
        <span><i class="fas fa-chevron-circle-up" aria-hidden="true"></i></span>
        <span><%= vidyagames[i].voteDown %></span>
        <span><i class="fas fa-chevron-circle-down" aria-hidden="true"></i></span>
        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
    <% } %>
    </ul>

    <h2>Add a video game</h2>

    <form action="/vidgames" method="POST">
      <input type="text" placeholder="video game" name="title">
      <button type="submit">Submit</button>
    </form>
    
    <script type="text/javascript" src="js/main.js"></script>
  </body>
</html>
